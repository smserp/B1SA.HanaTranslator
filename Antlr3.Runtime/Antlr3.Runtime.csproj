<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1</TargetFrameworks>
		<RootNamespace>Antlr.Runtime</RootNamespace>

		<Description>The runtime library for parsers generated by the C# target of ANTLR 3</Description>
		<Version>3.5.3</Version>

		<Title>ANTLR 3 Runtime</Title>

		<!-- Workaround issues with non-portable code -->
		<DefineConstants>$(DefineConstants);PORTABLE</DefineConstants>
	</PropertyGroup>

</Project>